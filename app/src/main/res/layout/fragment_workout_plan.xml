<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.ui.dashboard.DashboardFragment"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_card"
        app:liftOnScroll="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedTitleMarginTop="0dp"
            app:collapsedTitleGravity="center"
            android:background="@color/background_card"
            app:expandedTitleTextAppearance="@style/expandedBarTextStyle"
            app:expandedTitleGravity="left|bottom"
            app:contentScrim="@color/background_card"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Collapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/titlePage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/subTitlePage"
                    android:layout_marginStart="8dp"
                    android:textSize="24sp"
                    android:text="@string/title_page_workout_plan_fragment"
                    />
                <TextView
                    android:id="@+id/subTitlePage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sub_title_page_workout_plan_fragment"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintTop_toBottomOf="@+id/titlePage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/lineToolbar"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    />
                <View
                    android:id="@+id/lineToolbar"
                    android:layout_width="48dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bottom_sheet_line"
                    app:layout_constraintTop_toBottomOf="@+id/subTitlePage"
                    app:layout_constraintStart_toStartOf="@+id/subTitlePage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/background_card"
                app:menu="@menu/top_menu_icon_add"
                app:layout_collapseMode="pin"
                app:navigationIconTint="@color/primary_text"
                app:title="@string/title_page_workout_plan_fragment" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="8dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textWorkoutPlansListEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_workout_plan_is_empty"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/containerListNotEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/containerListEnd"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/titleGridViewWorkoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_your_workout_plans_page_workout_plan_fragment"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gridViewWorkoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleGridViewWorkoutPlan"
                    app:layout_constraintStart_toStartOf="@+id/titleGridViewWorkoutPlan"
                    app:layout_constraintEnd_toEndOf="@+id/titleGridViewWorkoutPlan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:overScrollMode="never"
                    android:layout_marginTop="4dp"
                    android:layoutAnimation="@anim/layout_animation"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerListEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/containerListNotEnd"
                app:layout_constraintStart_toStartOf="@id/containerListNotEnd"
                app:layout_constraintEnd_toEndOf="@+id/containerListNotEnd"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/titleGridViewWorkoutPlanEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_your_workout_end_plans_page_workout_plan_fragment"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gridViewWorkoutPlanEnd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleGridViewWorkoutPlan"
                    app:layout_constraintStart_toStartOf="@+id/titleGridViewWorkoutPlan"
                    app:layout_constraintEnd_toEndOf="@+id/titleGridViewWorkoutPlan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:overScrollMode="never"
                    android:layout_marginTop="4dp"
                    android:layoutAnimation="@anim/layout_animation"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>