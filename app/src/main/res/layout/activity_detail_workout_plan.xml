<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.NewEditWorkoutPlanActivity"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/background_card">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReturnBack"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="48dp"
            app:cornerRadius="10dp"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:iconTint="@color/primary_text"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_return_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:elevation="0dp"
            android:contentDescription="@string/content_description_button_return_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- containerTitleToolBar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTitleToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/containerToolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/background_card"
        android:padding="8dp">
        <TextView
            android:id="@+id/titlePage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/subTitlePage"
            android:layout_marginStart="8dp"
            android:text="@string/title_page_details_workout_plan"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/subTitlePage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            app:layout_constraintTop_toBottomOf="@+id/titlePage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lineToolbar"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            />
        <View
            android:id="@+id/lineToolbar"
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:background="@drawable/bottom_sheet_line"
            app:layout_constraintTop_toBottomOf="@+id/subTitlePage"
            app:layout_constraintStart_toStartOf="@+id/subTitlePage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddSession"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="48dp"
        app:cornerRadius="10dp"
        android:layout_height="48dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:iconTint="@color/white"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_add_1"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:elevation="0dp"
        android:layout_marginTop="-24dp"
        android:contentDescription="@string/content_description_button_add_workout"
        app:layout_constraintTop_toBottomOf="@+id/containerTitleToolBar"
        app:layout_constraintEnd_toEndOf="@+id/containerTitleToolBar"
        app:layout_constraintBottom_toTopOf="@+id/containerListSessions"/>

    <LinearLayout
        android:id="@+id/containerListSessions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddSession"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background_item_corners_rounded">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bg"
            android:progress="0" />

        <TextView
            android:id="@+id/textSessionsIsEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_sessions_is_empty_details_workout_plan"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>