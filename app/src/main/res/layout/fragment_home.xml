<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".manager.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            android:background="@drawable/background_title_page"
            android:elevation="8dp">
            <TextView
                android:id="@+id/nameWorkoutPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:ellipsize="marquee"
                android:lines="1"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                app:layout_constraintTop_toTopOf="@+id/btnOptionsWorkoutPlan"
                app:layout_constraintBottom_toBottomOf="@+id/btnOptionsWorkoutPlan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOptionsWorkoutPlan"
                android:layout_width="48dp"
                app:cornerRadius="10dp"
                android:layout_height="48dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                app:iconTint="@color/md_theme_light_onPrimary"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_more_vert"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/content_description_options_workout"
                />

            <TextView
                android:id="@+id/infoWeekWorkoutPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="18sp"
                android:ellipsize="marquee"
                android:textStyle="italic"
                android:lines="1"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                app:layout_constraintTop_toBottomOf="@+id/nameWorkoutPlan"
                app:layout_constraintStart_toStartOf="@+id/nameWorkoutPlan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btnOptionsWorkoutPlan"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bg"
            android:progress="0"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- containerSession -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerSession"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/containerSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:padding="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="ifContentScrolls"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- containerSessionEmpty -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerSessionEmpty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/containerSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/imageSessionEmpty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_workout_plan"
                android:textSize="20sp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_empty_list"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnNewSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_add_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/content_description_fab_new_routine"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>