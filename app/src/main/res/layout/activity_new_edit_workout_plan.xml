<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.NewEditWorkoutPlanActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linearToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:elevation="2dp"
        android:background="@color/background_card">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReturn"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_return_back"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_text"
            android:contentDescription="@string/content_descr_button_return"
            />

        <TextView
            android:id="@+id/titlePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="4dp"
            android:ellipsize="marquee"
            android:lines="1"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearToolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bg"
                android:progress="0"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/background_corners_rounded_big"
                android:padding="8dp">
                <LinearLayout
                    android:id="@+id/containerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/line1"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/textLabelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/edit_text_name_workout_plan"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:autofillHints="name"
                        android:hint="@string/text_label_required"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:background="@color/background_card"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/tertiary_text"
                        android:importantForAutofill="noExcludeDescendants"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/containerName"
                    app:layout_constraintBottom_toTopOf="@+id/containerDate"
                    android:padding="4dp"/>

                <LinearLayout
                    android:id="@+id/containerDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/line2"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/textLabelDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/name1"
                        android:textColor="@color/secondary_text"
                        android:text="@string/edit_text_date_start_workout_plan"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/name1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/startEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/choose_start_end_date"
                        android:ellipsize="marquee"
                        android:textSize="14sp"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:minHeight="48dp"
                        android:scrollHorizontally="true"
                        android:textColor="@color/primary_text"
                        app:drawableEndCompat="@drawable/ic_arrow_right"
                        app:drawableTint="@color/secondary_text" />
                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/containerNote"
                    app:layout_constraintTop_toBottomOf="@+id/containerDate"
                    android:padding="4dp"/>

                <LinearLayout
                    android:id="@+id/containerNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/textLabelNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/name1"
                        android:textColor="@color/secondary_text"
                        android:text="@string/edit_text_note_workout_plan"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/name1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:autofillHints="name"
                        android:hint="@string/text_label_optional"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="false"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:background="@color/background_card"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/tertiary_text"
                        android:importantForAutofill="noExcludeDescendants"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/containerWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/titleWorkoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_title_sessions_list_details_workout_plan"
                    android:textColor="@color/primary_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_corners_rounded_big"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textSessionsIsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_sessions_is_empty_details_workout_plan"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewWorkouts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:layoutAnimation="@anim/layout_animation_up"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_add_1"
                        app:iconGravity="textStart"
                        android:text="@string/text_button_add_session_workout_plan"
                        android:contentDescription="@string/text_button_add_session_workout_plan"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>